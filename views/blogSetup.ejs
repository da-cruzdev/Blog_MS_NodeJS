<%- include('./layouts/header.ejs') %>
<div class="container">
  <section>
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="row justify-content-center">
            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
              <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">
                Blog Setup
              </p>

              <form
                action=""
                method="post"
                class="mx-1 mx-md-4"
                enctype="multipart/form-data"
              >
                <div class="d-flex flex-row align-items-center mb-4">
                  <div class="form-outline flex-fill mb-0">
                    <input
                      type="text"
                      class="form-control"
                      name="blog_title"
                      value="<%= typeof formData !== 'undefined' ? formData.blog_title : '' %>"
                      placeholder="Enter Blog Title"
                    />
                    <% if (errors && errors.blog_title) { %>
                    <div class="invalid-feedback d-block">
                      <%= errors.blog_title%>
                    </div>
                    <% } %>
                  </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">
                  <div class="form-outline flex-fill mb-0">
                    <textarea
                      type="text"
                      class="form-control"
                      name="description"
                      placeholder="Enter Description"
                    >
<%= typeof formData !== 'undefined' ? formData.description: '' %></textarea
                    >
                    <% if (errors && errors.description) { %>
                    <div class="invalid-feedback d-block">
                      <%= errors.description %>
                    </div>
                    <% } %>
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-4">
                  <div class="form-outline flex-fill mb-0">
                    <input
                      type="text"
                      class="form-control"
                      name="name"
                      value="<%= typeof formData !== 'undefined' ? formData.name : '' %>"
                      placeholder="Enter Admin Name"
                    />
                    <% if (errors && errors.name) { %>
                    <div class="invalid-feedback d-block">
                      <%= errors.name%>
                    </div>
                    <% } %>
                  </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">
                  <div class="form-outline flex-fill mb-0">
                    <input
                      type="text"
                      class="form-control"
                      name="email"
                      value="<%= typeof formData !== 'undefined' ? formData.email : '' %>"
                      placeholder="Enter Email"
                    />
                    <% if (errors && errors.email){ %>
                    <div class="invalid-feedback d-block">
                      <%= errors.email%>
                    </div>
                    <% } %>
                  </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">
                  <div class="form-outline flex-fill mb-0">
                    <input
                      type="password"
                      class="form-control"
                      name="password"
                      value="<%= typeof formData !== 'undefined' ? formData.password : '' %>"
                      placeholder="Enter Password"
                    />
                    <% if (errors && errors.password) { %>
                    <div class="invalid-feedback d-block">
                      <%= errors.password%>
                    </div>
                    <% } %>
                  </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">
                  <div class="form-outline flex-fill mb-0">
                    <input type="file" class="form-control" name="blog_image" />
                    <% if (errors && errors.blog_image) { %>
                    <div class="invalid-feedback d-block">
                      <%= errors.blog_image%>
                    </div>
                    <% } %>
                  </div>
                </div>

                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                  <button
                    type="submit"
                    class="btn btn-primary btn-lg btn-block"
                  >
                    Blog Setup
                  </button>
                </div>
              </form>
            </div>
            <div
              class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2"
            >
              <img
                src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                class="img-fluid"
                alt="Sample image"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<% if (typeof message !== 'unedefined') { %>
<p><%= //message %></p>
<% } %> <%- include('./layouts/footer.ejs') %>
